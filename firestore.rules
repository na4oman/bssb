rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read/write their own notification tokens
      match /tokens/{tokenId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Users can read/write their own seen events
    match /userSeenEvents/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Events collection - with comment support
    match /events/{eventId} {
      // Anyone authenticated can read events
      allow read: if request.auth != null;
      
      // Only authenticated users can create events, and only if they set themselves as creator
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.createdBy.userId;
      
      // Allow authenticated users to update events for comments, likes, and attendance
      allow update: if request.auth != null && (
        // Event creator can update anything
        request.auth.uid == resource.data.createdBy.userId ||
        // Any authenticated user can add comments, likes, or update attendance
        (
          // Only allow updates to comments, likes, and attendees arrays
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['comments', 'likes', 'attendees'])
        )
      );
      
      // Only the creator can delete their events
      allow delete: if request.auth != null && 
                   request.auth.uid == resource.data.createdBy.userId;
    }
    
    // Posts collection - admin-only creation, public read
    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if request.auth != null;
      
      // Only admins can create posts
      allow create: if request.auth != null && 
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true &&
                   request.auth.uid == request.resource.data.createdBy.userId;
      
      // Allow authenticated users to update posts for comments and likes
      allow update: if request.auth != null && (
        // Admin post creator can update anything
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true &&
         request.auth.uid == resource.data.createdBy.userId) ||
        // Any authenticated user can add comments and likes
        (
          // Only allow updates to comments and likes arrays
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['comments', 'likes', 'updatedAt'])
        )
      );
      
      // Only admin creators can delete their posts
      allow delete: if request.auth != null && 
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true &&
                   request.auth.uid == resource.data.createdBy.userId;
    }
  }
}